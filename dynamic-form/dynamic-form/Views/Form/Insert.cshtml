@model Field

@{
    ViewData["Title"] = "Insert";
}

<div class="container">
    <div class="card p-4">
        <form>
            <div class="form-group">
                <label asp-for="Name" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" id="title" />
                    <span asp-validation-for="Name" class="text-danger" id="infoTitle"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Type" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Type" class="form-control" id="type" />
                    <span asp-validation-for="Type" class="text-danger" id="infoType"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="button" class="btn btn-primary" id="btnInsert">Save</button>
                </div>
            </div>
        </form>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    </div>
</div>